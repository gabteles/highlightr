{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "Highlightr",
  "description": "Highlight and summarize text on the web",
  "action": {
    "default_popup": "js/index.html",
    "default_title": "Highlightr"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["storage", "unlimitedStorage"]
}
